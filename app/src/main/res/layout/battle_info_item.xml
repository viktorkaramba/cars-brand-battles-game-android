<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:paddingBottom="20dp"
		android:background="@color/white"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:id="@+id/battleInfoRecycleView">

	<TextView
			android:id="@+id/userScore1"
			android:text="0"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toStartOf="@+id/doubleDots"
			android:textSize="24sp"
			android:layout_margin="10dp"
	/>
	<TextView
			android:id="@+id/doubleDots"
			android:text=":"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintStart_toStartOf="@+id/userScore1"
			app:layout_constraintEnd_toStartOf="@+id/userScore2"
			android:textSize="24sp"
			android:layout_margin="10dp"
	/>
	<TextView
			android:id="@+id/userScore2"
			android:text="0"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintStart_toEndOf="@+id/doubleDots"
			app:layout_constraintEnd_toEndOf="parent"
			android:textSize="24sp"
			android:layout_margin="10dp"
	/>
	<TextView
			android:id="@+id/userName1"
			android:text="You"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			app:layout_constraintTop_toBottomOf="@+id/userScore1"
			app:layout_constraintStart_toStartOf="@+id/userScore1"
			app:layout_constraintEnd_toEndOf="@+id/userScore1"
			android:textSize="24sp"
	/>
	<TextView
			android:id="@+id/userName2"
			android:text="Opponent"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			app:layout_constraintTop_toBottomOf="@+id/userScore2"
			app:layout_constraintStart_toStartOf="@+id/userScore2"
			app:layout_constraintEnd_toEndOf="@+id/userScore2"
			android:textSize="24sp"
	/>
</androidx.constraintlayout.widget.ConstraintLayout>