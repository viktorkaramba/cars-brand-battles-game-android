<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:id="@+id/battleItemCardView"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintBottom_toBottomOf="parent"
		app:cardBackgroundColor="@color/main"
		android:layout_margin="5dp"
		app:cardElevation="50dp"
		app:cardCornerRadius="30dp">
		<androidx.constraintlayout.widget.ConstraintLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@drawable/card_view_rounded"
				android:textAlignment="center">
		<TextView
				android:id="@+id/userScore1"
				android:text="@string/_0"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				app:layout_constraintTop_toTopOf="parent"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintEnd_toStartOf="@+id/doubleDots"
				android:textSize="34sp"
				android:textColor="@color/main"
				android:fontFamily="@font/main"
				android:layout_margin="10dp"
		/>
		<TextView
				android:id="@+id/doubleDots"
				android:text="@string/doubleDots"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				app:layout_constraintTop_toTopOf="parent"
				app:layout_constraintStart_toEndOf="@+id/userScore1"
				app:layout_constraintEnd_toStartOf="@+id/userScore2"
				android:textSize="24sp"
				android:textColor="@color/main"
				android:fontFamily="@font/main"
				android:layout_margin="10dp"
		/>
		<TextView
				android:id="@+id/userScore2"
				android:text="0"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				app:layout_constraintTop_toTopOf="parent"
				app:layout_constraintStart_toEndOf="@+id/doubleDots"
				app:layout_constraintEnd_toEndOf="parent"
				android:textSize="34sp"
				android:textColor="@color/main"
				android:fontFamily="@font/main"
				android:layout_margin="10dp"
		/>
		<TextView
				android:id="@+id/userName1"
				android:text="@string/you"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				app:layout_constraintTop_toBottomOf="@+id/userScore1"
				app:layout_constraintStart_toStartOf="@+id/userScore1"
				app:layout_constraintEnd_toEndOf="@+id/userScore1"
				android:textSize="24sp"
				android:textColor="@color/main"
				android:fontFamily="@font/main"
		/>
		<TextView
				android:id="@+id/userName2"
				android:text="@string/opponent"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				app:layout_constraintTop_toBottomOf="@+id/userScore2"
				app:layout_constraintStart_toStartOf="@+id/userScore2"
				app:layout_constraintEnd_toEndOf="@+id/userScore2"
				android:textSize="24sp"
				android:textColor="@color/main"
				android:fontFamily="@font/main"
		/>
		</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>